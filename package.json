{
  "name": "lowcode",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)\"",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "22.15.32",
    "typescript": "5.8.3",
    "eslint": "9.29.0",
    "@eslint/js": "9.29.0",
    "typescript-eslint": "8.34.0",
    "eslint-plugin-prettier": "5.4.1",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "prettier": "3.5.3",
    "globals": "16.2.0",
    "cspell": "9.0.2",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "commitizen": "4.3.1",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "cz-git": "1.11.1",
    "fast-glob": "3.3.3"
  },
  "keywords": [],
